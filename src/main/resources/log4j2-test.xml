<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Properties>
		<Property name="filename">cdtool.log</Property>
	</Properties>
	<Appenders>
		<File name="FILE" fileName="cdtool.log" append="false">
			<PatternLayout>
				<pattern>%d %p %c{5} [%t] - %m%n</pattern>
			</PatternLayout>
		</File>

		<RollingRandomAccessFile name="ROLLING_FILE"
			fileName="r-${filename}" filePattern="r-${filename}-%i.log">
			<PatternLayout>
				<pattern>%d %p %c{5} [%t] - %m%n</pattern>
			</PatternLayout>
			<SizeBasedTriggeringPolicy size="250KB" />
		</RollingRandomAccessFile>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Root level="debug">
			<AppenderRef ref="ROLLING_FILE" />
		</Root>
	</Loggers>
</Configuration>